<div class='main-header'>
  <div class='main-header-room'>
    <a href="#" class='main-header-room-name'>hogefuga</a>
  </div>
  <div class='delete-room'>
    <a href="#" class='delete-room-btn'>チャットを終了する</a>
  </div>
</div>
<div class='main-messages'>
  <div class='main-message'>
    <div class='uppar-contents'>
      <div class='message-user-name'>Tom</div>
      <div class='message-create-date'>2020/3/3</div>
    </div>
    <div class='down-contents'>おはよう</div>
  </div>
  <div class='main-message'>
    <div class='uppar-contents'>
      <div class='message-user-name'>cary</div>
      <div class='message-create-date'>2020/3/3</div>
    </div>
    <div class='down-contents'>こんばんは</div>
  </div>
</div>
<div class='main-form'>
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class='form-input'>
    <%= f.text_field :content , placeholder: "type a message", class: 'text-form' %>
    <label class='form-image'>
      <span class='image-file'>画像</span>
      <%= f.file_field :image , class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信' , class: 'send-btn' %>
  <% end %>
</div>